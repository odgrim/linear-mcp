{
  "name": "@odgrim/linear-mcp",
  "version": "v0.0.2",
  "description": "fork of cline linear-mcp, fixed for api keys",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-datetime": "build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch '**/*.integration.test.ts'",
    "get-test-tokens": "node --loader ts-node/esm scripts/get-test-tokens.ts",
    "test:oauth": "node --loader ts-node/esm scripts/test-oauth.ts",
    "build": "tsc && chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "nodemon --watch src --ext ts --exec \"npm run build && npm start\""
  },
  "keywords": [
    "mcp",
    "linear"
  ],
  "author": "odgrim",
  "license": "ISC",
  "devDependencies": {
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.10",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "open": "^10.1.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "@linear/sdk": "^38.0.0",
    "@modelcontextprotocol/sdk": "^1.4.0",
    "graphql": "^16.10.0",
    "graphql-tag": "^2.12.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/odgrim/linear-mcp.git"
  }
}
